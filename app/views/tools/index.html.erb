<h1>All Tools</h1>

<p><%= link_to "Create New Tool", new_tool_path %></p>

<table>
  <tr>
    <td><strong>Tool</strong></td>
    <td><strong>Quantity</strong></td>
  </tr>
  <% @tools.each do |tool| %>
    <tr>
      <td><%= link_to "#{tool.name}", tool_path(tool.id)%></td>
      <td><%= tool.quantity %></td>
    </tr>
  <% end %>
</table>
